<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="../tests/bootstrap.php"
         verbose="true">
    <testsuites>
        <testsuite name="BrZend">
            <directory>../tests/</directory>
             <exclude>../vendor</exclude>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="${basedir}/build/coverage"/>
        <log type="coverage-clover" target="${basedir}/build/logs/clover.xml"/>
        <log type="coverage-crap4j" target="${basedir}/build/logs/crap4j.xml"/>
        <log type="coverage-xml" target="${basedir}/build/logs/coverage"/>
        <log type="junit" target="${basedir}/build/logs/junit.xml"/>
    </logging>

</phpunit>

